<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <property name="logLevel" value="${env:LOG_LEVEL:-INFO}"/>
    </Properties>

    <Appenders>
        <!--Console Appender-->
        <Console name="console_appender" target="SYSTEM_OUT"/>

    </Appenders>

    <Loggers>
        <root level="${logLevel}">
            <appender-ref ref="console_appender"/>
        </root>
    </Loggers>
</Configuration>
